---
interface Photo {
  id: string;
  title: string;
  image: string;
  alt: string;
  tags: string[];
}

interface Props {
  photos: Photo[];
}

const { photos } = Astro.props;
---

<div
  id="photo-grid"
  class="columns-1 md:columns-2 xl:columns-3 gap-6 space-y-6"
>
  {
    photos.map((photo) => (
      <a
        href={`/fotografia/${photo.id}`}
        class="block break-inside-avoid"
        data-tags={photo.tags.join(",")}
      >
        <figure class="relative group overflow-hidden rounded-lg bg-zinc-100 border border-zinc-200 shadow-sm">
          <img
            src={photo.image}
            alt={photo.alt}
            class="w-full h-auto object-cover transition-transform duration-700 ease-out group-hover:scale-[1.03]"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none flex flex-col justify-end p-6">
            <figcaption class="text-white font-medium translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
              {photo.title}
            </figcaption>
          </div>
        </figure>
      </a>
    ))
  }
</div>
