---
interface Props {
  institution: string;
  course: string;
  duration: string;
  skills: string[];
}

const { institution, course, duration, skills } = Astro.props;
---

<div class="relative pl-8 pb-12 group last:pb-0">
  <!-- Timeline vertical line -->
  <div
    class="absolute left-[3px] top-2 bottom-0 w-[2px] bg-zinc-200 group-last:bg-transparent"
  >
  </div>

  <!-- Timeline dot -->
  <div
    class="absolute left-[-2px] top-1.5 h-3 w-3 rounded-full border-2 border-zinc-300 bg-white transition-colors duration-300 group-hover:border-zinc-900 group-hover:bg-zinc-900"
  >
  </div>

  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-2">
    <div>
      <h3 class="text-lg font-bold text-zinc-900">{course}</h3>
      <h4 class="text-base font-medium text-zinc-600 mt-1">{institution}</h4>
    </div>
    <div
      class="mt-2 sm:mt-0 px-3 py-1 rounded-full bg-zinc-100 border border-zinc-200 text-xs font-mono text-zinc-700 whitespace-nowrap self-start"
    >
      {duration}
    </div>
  </div>

  <div class="mt-4">
    <p
      class="text-sm text-zinc-500 mb-3 uppercase tracking-wider font-semibold"
    >
      CompetÃªncias
    </p>
    <div class="flex flex-wrap gap-2">
      {
        skills.map((skill) => (
          <span class="text-xs px-2.5 py-1 bg-zinc-50 text-zinc-700 rounded-md border border-zinc-200">
            {skill}
          </span>
        ))
      }
    </div>
  </div>
</div>
